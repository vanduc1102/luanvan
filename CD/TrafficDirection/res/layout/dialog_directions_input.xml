<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_start"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bt_bus"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:hint="@string/input_direct_mylocation"
        android:inputType="textNoSuggestions" >

    </EditText>

     <Button
         android:id="@+id/bt_point1"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_alignBottom="@+id/et_start"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="5dp"
         android:layout_toRightOf="@+id/et_start"
         android:background="@drawable/point_on_map" />

    <EditText
        android:id="@+id/et_end"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/et_start"
        android:layout_alignRight="@+id/bt_bus"
        android:layout_below="@+id/et_start"
        android:ems="10"
        android:hint="@string/input_direct_endpoint"
        android:inputType="textNoSuggestions" />

    <Button
        android:id="@+id/bt_point2"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/et_end"
        android:layout_alignLeft="@+id/bt_point1"
        android:layout_alignRight="@+id/bt_point1"
        android:layout_alignTop="@+id/et_end"
        android:background="@drawable/point_on_map" />

    <Button
        android:id="@+id/bt_walking"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_end"
        android:layout_marginLeft="5dp"
        android:background="@drawable/maps_pedestrian_icon" />

    <Button
        android:id="@+id/bt_moto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_end"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/bt_walking"
        android:background="@drawable/motorcycle_icon_md" />
    
    <Button
        android:id="@+id/bt_bus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_end"
        android:layout_alignBaseline="@+id/bt_moto"
        android:layout_alignBottom="@+id/bt_moto"
        android:layout_toRightOf="@+id/bt_car"
        android:layout_marginLeft="5dp"
        android:background="@drawable/maps_u_tube_icon" />

    <Button
        android:id="@+id/bt_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_end"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/bt_moto"
        android:background="@drawable/maps_car_icon" />

    <Button
        android:id="@+id/bt_direction"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_end"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/bt_bus"
        android:layout_alignRight="@+id/bt_point2"
        android:layout_toRightOf="@+id/bt_bus"
        android:background="@drawable/ic_menu_directions" />
</RelativeLayout>